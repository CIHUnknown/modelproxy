TESTS = test/*.test.js
TIMEOUT = 10000
MOCHA_OPTS =
REPORTER = tap
NPM_REGISTRY = --registry=http://registry.npm.taobao.net
NPM_INSTALL_TEST = PYTHON=`which python2.6` NODE_ENV=test npm install $(NPM_REGISTRY)

install:
	@$(NPM_INSTALL_TEST)

jshint: install
	@./node_modules/.bin/jshint .

test: install
	@NODE_ENV=test ./node_modules/.bin/mocha \
		--reporter $(REPORTER) --timeout $(TIMEOUT) $(MOCHA_OPTS) $(TESTS)

test-cov cov: install
	@NODE_ENV=test node --harmony \
		./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha \
		-- -u exports \
		--reporter $(REPORTER) \
		--timeout $(TIMEOUT) \
		$(MOCHA_OPTS) \
		$(TESTS)
	@./node_modules/.bin/alicov coverage

test-all: jshint test test-cov

autod: install
	@./node_modules/.bin/autod -w $(NPM_REGISTRY)
	@$(MAKE) install

contributors: install
	@./node_modules/.bin/ali-contributors

.PHONY: test
