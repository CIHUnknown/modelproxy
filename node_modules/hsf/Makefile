TESTS = test/*_test.js
TIMEOUT = 10000
MOCHA_OPTS =
REPORTER = tap
NPM_REGISTRY = --registry=http://registry.npm.taobao.net
NPM_DIST = --disturl=dist.u.qiniudn.com
NPM_INSTALL_PRODUCTION = PYTHON=`which python2.6` NODE_ENV=production npm install $(NPM_REGISTRY) $(NPM_DIST)
NPM_INSTALL_TEST = PYTHON=`which python2.6` NODE_ENV=test npm install $(NPM_REGISTRY) $(NPM_DIST)

check:
	@curl -s http://npm.alibaba-inc.com/version/check.sh | sh

install:
	@$(NPM_INSTALL_PRODUCTION)

install-test: check
	@$(NPM_INSTALL_TEST)

jshint: install-test
	@./node_modules/.bin/jshint .

test: install-test
	@NODE_ENV=test ./node_modules/.bin/mocha \
		--reporter $(REPORTER) --bail --timeout $(TIMEOUT) $(MOCHA_OPTS) $(TESTS)

test-cov: install-test
	@$(MAKE) -s test MOCHA_OPTS='--require blanket' REPORTER=html-cov | ./node_modules/.bin/alicov

test-all: test test-cov

autod: install-test
	@./node_modules/.bin/autod -w $(NPM_REGISTRY) --dep=nan -e bin
	@$(MAKE) install-test

contributors: install-test
	@./node_modules/.bin/ali-contributors

.PHONY: check clean install install-test test test-cov test-all
